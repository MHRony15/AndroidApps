<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="-7dp"
        android:layout_marginRight="-7dp"
        android:hint="0"
        android:paddingTop="10dp"
        android:textSize="70dp" />

    <Button
        android:id="@+id/bclc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"

        style="@style/AppTheme"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"

        style="@style/AppTheme"
        android:layout_below="@id/bclc"
        />
    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        style="@style/AppTheme"
        android:layout_alignLeft="@id/b7"
        android:layout_below="@id/b7"
        />
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_alignLeft="@id/b7"
        android:layout_below="@id/b4"
        />
    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_alignTop="@id/b7"
        android:layout_below="@id/b4"
        android:layout_toEndOf="@id/b7"
        android:layout_toRightOf="@id/b7" />
    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_toEndOf="@id/b8"

        android:layout_toRightOf="@id/b8"
        android:layout_alignTop="@id/b8"/>
    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_alignTop="@id/b4"
        android:layout_alignRight="@id/b8"
        />
    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_alignTop="@id/b4"
        android:layout_alignRight="@id/b9"
        />
    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignTop="@id/b1"
        android:layout_alignRight="@id/b8"
        />
    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_alignTop="@id/b1"
        android:layout_alignRight="@id/b9"
        />
    <Button
        android:id="@+id/bdot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:layout_below="@id/b1"
        />
    <Button
        android:id="@+id/b0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignTop="@id/bdot"
        android:layout_alignRight="@id/b2"
        />
    <Button
        android:id="@+id/beql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_alignTop="@id/bdot"
        android:layout_alignRight="@id/b3"
        />
    <Button
        android:id="@+id/bdiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_alignTop="@id/b7"
        android:layout_toEndOf="@id/b9"
        android:layout_toRightOf="@id/b9" />
    <Button
        android:id="@+id/bmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_alignTop="@id/b6"
        android:layout_alignRight="@id/bdiv"
        android:layout_alignLeft="@id/bdiv"
        />
    <Button
        android:id="@+id/bsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_alignTop="@id/b3"
        android:layout_alignRight="@id/bdiv"
        android:layout_alignLeft="@id/bdiv"
        />
    <Button
        android:id="@+id/badd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignTop="@id/beql"
        android:layout_alignRight="@id/bdiv"
        android:layout_alignLeft="@id/bdiv"
        />



</RelativeLayout>