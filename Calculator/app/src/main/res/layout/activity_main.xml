<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#316A7A5D"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ans"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#AFD7F3"
        android:gravity="end"
        android:hint="0"
        android:textAlignment="viewEnd"
        android:textSize="70sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btncler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="C"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnneg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="-/+"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="%"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnDelet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#417FC27F"
            android:text="DEL"
            android:textSize="38sp"
            tools:ignore="Suspicious0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="9"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="/"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnmult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="X"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btndif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="-"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btndot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="."
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="0"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btneql"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="="
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnpls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#417FC27F"
            android:text="+"
            android:textSize="40sp" />


    </LinearLayout>


</LinearLayout>